# Environment
NODE_ENV=development
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/swiftboard?schema=public

# Docker Database Config (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=swiftboard

# JWT Authentication
JWT_ACCESS_SECRET=change-this-to-something-secure-in-production
JWT_REFRESH_SECRET=change-this-to-something-else-secure-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_AUDIENCE=https://api.swiftboard.com
JWT_ISSUER=swiftboard

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=swiftboard-uploads

# Email configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-app-password

# Frontend URL
FRONTEND_URL=http://localhost:3000
