# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgres://username:password@localhost:5432/swiftboard

# JWT Authentication
JWT_ACCESS_SECRET=change-this-to-something-secure-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_AUDIENCE=https://api.swiftboard.com
JWT_ISSUER=swiftboard

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=swiftboard-uploads
